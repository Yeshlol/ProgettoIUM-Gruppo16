<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dosaggio"
    android:background="@drawable/sfondo">

    <TextView
        style="@style/TextStyle.Heading"
        android:id="@+id/tvTitoloDosaggio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="30dp"
        android:text="Testo"
        android:textColor="@color/colorGreenDark"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/insetticida"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:id="@+id/tvInsetticida"
        android:layout_below="@id/tvTitoloDosaggio"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:id="@+id/llInsetticida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvInsetticida"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_insetticida"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:gravity="center|start|bottom"
                android:text="8.00"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ml"
            android:textSize="18sp"
            android:drawableRight="@drawable/ic_baseline_emoji_nature_24"
            />
    </LinearLayout>

    <TextView
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/concime"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:id="@+id/tvConcime"
        android:layout_below="@id/llInsetticida"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:id="@+id/llConcime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvConcime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_concime"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:gravity="center|start|bottom"
                android:text="6.00"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mg"
            android:textSize="18sp"
            android:drawableRight="@drawable/ic_baseline_eco_24"
            android:background="@drawable/input_border_bottom"
            />
    </LinearLayout>

    <TextView
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/acqua"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:id="@+id/tvAcqua"
        android:layout_below="@id/llConcime"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:id="@+id/llAcqua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAcqua"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_acqua"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:gravity="center|start|bottom"
                android:text="10.00"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/l"
            android:textSize="18sp"
            android:drawableRight="@drawable/ic_baseline_opacity_24"
            android:background="@drawable/input_border_bottom"
            />
    </LinearLayout>

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_modifica"
        style="@style/Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llAcqua"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/modifica_dosaggi"
        android:onClick="modificaDosaggi"
        android:fontFamily="@font/opensans_bold"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav"
        android:background="@drawable/bottom_bar"
        app:itemIconTint="@color/black_effective"
        app:itemTextColor="@color/black_effective" />
</RelativeLayout>