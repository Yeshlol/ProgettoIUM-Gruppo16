<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pianifica"
    android:background="@drawable/sfondo">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="22dp"
        android:id="@+id/card">

        <TextView
            style="@style/TextStyle.Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp"
            android:text="@string/pianifica"
            android:textColor="@color/colorGreenDark"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:id="@+id/linearLayout">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/gray"
                app:hintTextAppearance="@style/TextStyle"
                android:background="@drawable/edittext"
                android:id="@+id/tInputChiave"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_chiave"
                    style="@style/TextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/input_border_bottom"
                    android:cursorVisible="true"
                    android:gravity="center"
                    android:hint="@string/nome_coltura"
                    android:maxLength="50"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prodotti"
                android:textColorHint="@color/gray"
                app:hintTextAppearance="@style/TextStyle"
                android:background="@drawable/edittext"
                android:id="@+id/tInputProdotto">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_prodotto"
                    style="@style/TextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/input_border_bottom"
                    android:cursorVisible="true"
                    android:gravity="center"
                    android:maxLength="50"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ettari"
                android:textColorHint="@color/gray"
                app:hintTextAppearance="@style/TextStyle"
                android:background="@drawable/edittext"
                android:id="@+id/tInputEttari">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_ettari"
                    style="@style/TextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/input_border_bottom"
                    android:cursorVisible="true"
                    android:gravity="center"
                    android:maxLength="50"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/data"
                android:textColorHint="@color/gray"
                app:hintTextAppearance="@style/TextStyle"
                android:background="@drawable/edittext"
                android:id="@+id/tInputData">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_data"
                    style="@style/TextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/input_border_bottom"
                    android:cursorVisible="true"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:clickable="true"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/resa"
                android:textColorHint="@color/gray"
                app:hintTextAppearance="@style/TextStyle"
                android:background="@drawable/edittext"
                android:id="@+id/tInputResa">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_resa"
                    style="@style/TextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/input_border_bottom"
                    android:cursorVisible="true"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:clickable="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_pianifica"
                style="@style/Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="@string/aggiungi_coltura"
                android:onClick="aggiungiColtura"
                android:fontFamily="@font/opensans_bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav"
        android:background="@drawable/bottom_bar"
        app:itemIconTint="@color/black_effective"
        app:itemTextColor="@color/black_effective" />
</RelativeLayout>